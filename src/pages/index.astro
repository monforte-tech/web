  width: 48%;
  height: auto;
}

.remark {
  font-size: 1.6em;
  text-align: center;
  margin-bottom: 2em;
}

.fila {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2em;
}

.columna1 {
  width: 48%;
  margin-bottom: 4em;
}

.columna2 {
  width: 48%;
  margin-bottom:2em;
}

.columna1 p, .columna2 p {
  text-align: justify;
  hyphens: auto;

}

</style>
