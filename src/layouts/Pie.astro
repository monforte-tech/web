---
import Facebook from '../components/logos/Facebook.astro';
import Twitter from '../components/logos/Twitter.astro';
import Github from '../components/logos/Github.astro';
import Linkedin from '../components/logos/Linkedin.astro';

const { color = "azulon", background = "arena" } = Astro.props;
const textColor = `var(--${color})`;
const backgroundColor = `var(--${background}-oscuro)`;

---
<footer id="pie" class="pergamino no-pie">
  <div class="footer-wrapper">
    <div class="links-title">Enlaces</div>
    <div class="links">
      <ul>
        <li><a href="">Colegio de Ingenieros de Minas</a>
        <li><a href="">Página Personal</a>
        <li><a href="">Proyecto Minax</a>
      </ul>
    </div>
    <div class="address">Monforte Technologies<br>
  San Bernardo 14, Primero<br>
  33402 Avilés (Asturias)<br>
  España</div>
    <div class="contact-title">
      Contacto
    </div>
    <div class="social-container">
      <div class="social"><a href="https://www.facebook.com/monforte.tech"><Facebook color={color} /></a></div>
      <div class="social"><a href="https://x.com/monforte_tech"><Twitter color={color}/></a></div>
      <div class="social"><a href="https://github.com/monforte-tech"><Github color={color} /></a></div>
      <div class="social"><a href="https://www.linkedin.com/company/monforte-tech/"><Linkedin color={color} /></a></div>
    </div>
    <div class="email"><a href="mailto:contacto@monforte.tech">contacto@monforte.tech</a></div>
  </div>
 </footer>

<style define:vars={{ textColor, backgroundColor}}>
  footer {
    overflow: hidden;
    width: 100%;
    color: var(--textColor);
    background-color: var(--backgroundColor);
    margin-top: 4em;
    padding-bottom: 2em;
  }

  .footer-wrapper {
    margin: 0 auto;
    display: grid;
    width: 900px;
    padding-top: 2em;
    grid-template-columns: 20px 300px 20px 270px 20px 270px;
    grid-template-rows: 20px 25px 20px auto 20px;
  }

  .links-title {
    grid-column: 2/3;
    grid-row: 2/3;
    font-weight: bold;
    font-size: 21px;

  }

  .links {
    font-size: 16px;
    grid-column: 2/3;
    grid-row: 4/5;
  }

  .links ul {
    list-style-position: inside;
    list-style-image: none;
    padding: 0;
    margin: 0 0 0 0;
  }

  .links li {
    list-style-position: inside;
    list-style: none;
    display: list-item;
    padding: 0 0 1em 0;
  }

  .links a {
    text-decoration: none;
    color: var(--textColor);
  }

  .links a:hover {
    text-decoration: underline;
  }

  .address {
    font-size: 16px;
    grid-column: 4/6;
    grid-row: 4/5;
  }

  .contact-title {
    font-weight: bold;
    font-size: 21px;
    grid-row: 2/3;
    grid-column: 4/6;
  }

  .social-container {
    grid-column: 6/7;
    grid-row: 4/5;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .email {
    grid-column: 5/7;
    grid-row: 2/3;
    font-size: 21px;
    font-weight: 600;
    color: var(--textColor);
    text-align: center;
  }

  .email a {
    color: var(--textColor);

  }
</style>
