---
import Pie from './Pie.astro'
import Head from './Head.astro'
import Menu from '../components/Menu.astro';
import Icono2 from '../components/logos/Icono2.astro';
import '../styles/colors.css'
import '../styles/comun.css'

interface Props {
	title: string;
    color?: string;
    background?: string;
    logo?: boolean;
}

const { title, color = "azulon", background = "arena" } = Astro.props;
const textColor = `var(--${color})`;
const backgroundColor = `var(--${background})`;
const faviconUrl = `${import.meta.env.BASE_URL}/favicon.svg`;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={faviconUrl} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
      <div class="wrapper">
        <div class="header-wrapper">
          <header>
            <slot name="icono"/>
            <slot name="menu"/>
          <slot name="title"/>
          </header>
        </div>
        <main>
          <slot />
        </main>
        <Pie color={color} background={background}/>
      </div>
	</body>
</html>
<style define:vars={{ textColor, backgroundColor }}>
	html {
      height: 100%;
	}

    body {
      height: 100%;
      margin: 0;
      color: var(--textColor);
      background-color: var(--backgroundColor);
    }

    .wrapper {
      min-height: 100%;
      display: grid;
      grid-template-rows: auto 1fr auto;
      justify-items: center;
    }

.header-wrapper {
  width: 100%;
  padding-bottom: 1em;
  background-color: var(--arena-oscuro);
  border-bottom: 1px solid var(--gris-claro);
  font-size: 16px;
}

header {
  width: 900px;
  margin: 0 auto 2em auto;
}


@media (width > 900px) {
  main {
    width: 900px;
  }

  .icono {
    position: absolute;
    top: 60px;
    left:50px;
  }

  header {
    width: 900px;
  }
}

@media (600px <= width <= 900px) {
  main {
    width: 98%;
  }

  header {
    width: 100%;
  }
}

@media (300px <= width <= 600px) {
  main {
    width: 98%;
  }

  header {
    width: 100%;
    margin-botom: 0;
  }
}
</style>
