---
import Horizontal from '../components/logos/Horizontal.astro';
const { color } = Astro.props;
const textColor = `var(--${color})`;
---

<div class="menu">
  <slot />
</div>

<style define:vars={{ textColor }}>
  .menu {
    height: 3em;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    flex-wrap: no-wrap;
    align-items: center;
    padding-top: 0.5em;
    padding-right: 10px;
    gap: 25px;
  }

  a {
    text-decoration: none;
    font-size: 1.2em;
    font-weight: bold;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  a:visited {
    color: var(--textColor);
  }


</style>
